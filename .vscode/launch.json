    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Version",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/nerdctl",
            "args": [
                "version"
            ]
        },
        {
            "name": "Create Container",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/nerdctl",
            "args": [
                "create",
                "docker.m.daocloud.io/nginx:alpine"
            ]
        },
        {
            "name": "Add Host with hostnetwork",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/nerdctl",
            "args": [
                "run",
                "--rm",
                "--add-host=node01:2.1.3.7",
                "--net=host",
                "docker.m.daocloud.io/ubuntu:20.04",
                "cat",
                "/etc/hosts"
            ]
        },
        {
            "name": "Add Host with bridge",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/nerdctl",
            "args": [
                "run",
                "--add-host=node01:2.1.3.7",
                "docker.m.daocloud.io/ubuntu:20.04",
                "cat",
                "/etc/hosts"
            ]
        },
        {
            "name": "Compose Up",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/nerdctl",
            "args": [
                "compose",
                "-f",
                "/tmp/e/d.yml",
                "up",
                "-d"
            ]
        }
    ]
}